<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here.
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item> -->
    </style>

    <style name="AppBackground">
        <!-- <item name="android:background">@drawable/bg2</item> -->
    </style>

    <style name="ListView" parent="@android:style/Widget.ListView">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@android:color/black</item>
        <item name="android:dividerHeight">3dp</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="LargeCustomText" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">16pt</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="LargeCustomTextBold" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="MediumCustomText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">12pt</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="MediumCustomTextBold" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="SmallCustomText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">8pt</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="SmallCustomTextBold" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"Monaco"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:background">@color/blue_soft</item>
        <item name="android:inputType">textNoSuggestions</item>
    </style>

</resources>
