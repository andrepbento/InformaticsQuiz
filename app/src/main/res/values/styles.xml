<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here.
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item> -->
    </style>

    <style name="LargeCustomText" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">16pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>/>
    </style>

    <style name="MediumCustomText" parent="Base.TextAppearance.AppCompat.Medium">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">12pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>/>
    </style>

    <style name="SmallCustomText" parent="Base.TextAppearance.AppCompat.Small">
        <item name="android:capitalize">characters</item>
        <item name="android:textSize">8pt</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
        <item name="android:textColor">@color/black</item>/>
    </style>

    <style name="AppTheme.Button" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"Monaco"</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/small_padding</item>
        <item name="android:background">@color/blue_soft</item>
    </style>

    <style name="RightButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/green</item>
    </style>

    <style name="WrongButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/red</item>
    </style>

</resources>
