<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.andre.informaticsquiz">

    <meta-data
        android:name="com.google.android.gms.vision.DEPENDENCIES" android:value="barcode" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="activities.MainMenuActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="activities.QuestionsViewerActivity" />
        <activity android:name="activities.CreateGameActivity" />
        <activity android:name="activities.GameActivity" />
        <activity android:name="activities.SinglePlayerGameResultActivity" />
        <activity android:name="activities.PlayerProfileActivity" />
        <activity android:name="activities.CameraActivity" />
        <activity android:name="activities.PlayerResultsActivity" />
        <activity android:name="activities.HowToPlayActivity" />
        <activity android:name="activities.AboutTheAppActivity" />
        <activity android:name="activities.QRCodeActivity"></activity>
    </application>

</manifest>